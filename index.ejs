<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/styles.css">
    <% if (locals.forecast) { %>
    <title><%=forecast.name %> Weather</title>
    <% } else { %>
    <title>Weather</title>
    <% } %>
</head>
<body>
    <div class="weather-icon"><img src="./images/weather.png"></div> <!-- image used by ICONFINDER: https://www.iconfinder.com/search/icons?q=sun&category=weather&price=free&license=gte__1 -->
    <div class="navbar">
    <form action="/submit" method="post" class="navbar-form">
        <input id="city" type="text" name="city" placeholder="Search for a city or town">
    </form>
    </div>
   
    <% if (locals.forecast) { %>
        <% const temperature = Math.round(forecast.main.temp); %>
        <h1 id="temp-name"><%=city %></h1>
        <h1 id="temp"><%=temperature %>&deg;</h1>

    <div class="container">
        <div class="card outer-card col-md-8">

        <div class="card-body">
          <h3 class="card-title"><%=forecast.weather[0].description %></h3>
          <p class="card-text">FEELS LIKE <%=Math.round(forecast.main.feels_like) %>&deg;</p>
          
          <div class="row inner-card">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">HUMIDITY</h6>
                  <p class="card-text"><%=forecast.main.humidity %>%</p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">PRESSURE</h6>
                  <p class="card-text"><%=forecast.main.pressure %> hPa</p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">WIND</h6>
                  <p class="card-text">Speed: <%=forecast.wind.speed %> KM/H<br>Gust: <%=forecast.wind.gust %> KM/H</p>
                </div>
              </div>
            </div>
          </div>
          <div class="row inner-card-2">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">VISIBILITY</h6>
                  <p class="card-text"><%=Math.floor(forecast.visibility / 1000)%>km</p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">SUN</h6>
                  <p class="card-text">Sunrise: <%=sunrise %><br>Sunset: <%=sunset %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">CURRENT TEMP</h6>
                  <p class="card-text">L:<%=Math.round(forecast.main.temp_min) %>&deg; H:<%=Math.round(forecast.main.temp_max) %>&deg;</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
            <!-- Add hour forecast -->
        <!-- <s% daily.list.forEach(function(item) { %> -->
            <!-- <h3><s%=item.main.temp %></h3> -->
        <!-- <s% }); %> -->
    <% } else { %>
        <h1><%=locals.err %></h1>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>